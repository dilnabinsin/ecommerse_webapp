                showConfirmButton: false
            });
            window.location.href = '/userProfile';
        } else {
            hideLoader();
            Swal.fire({ icon: 'error', title: 'Oops...', text: result.message });
        }
    } catch (error) {
        hideLoader();
        console.error('Error:', error);
        Swal.fire({ icon: 'error', title: 'Oops...', text: 'An unexpected error occurred.' });
    }
});
