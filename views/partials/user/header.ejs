    <script>
  document.addEventListener('DOMContentLoaded', function () {
    // Initialize Bootstrap tooltips
    var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
    tooltipTriggerList.forEach(function (tooltipTriggerEl) {
      new bootstrap.Tooltip(tooltipTriggerEl);
    });

    // Fetch and update cart/wishlist counts
    function fetchCartWishlistCount() {
      $.ajax({
        url: '/getCartWishlistCount', // Updated to match your working endpoint
        method: 'GET',
        success: function (data) {
          $('#cart-count').text(data.cartCount || 0);
          $('#wishlist-count').text(data.wishlistCount || 0);
        },
        error: function (error) {
          console.error('Error fetching cart/wishlist count:', error);
          $('#cart-count').text(0);
          $('#wishlist-count').text(0);
        }
      });
    }

    // Call the function on page load
    fetchCartWishlistCount();

    // Optional: Periodically update counts (e.g., every 30 seconds)
    setInterval(fetchCartWishlistCount, 30000);
  });
</script>


    
